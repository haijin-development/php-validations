{
    "name": "haijin/validations",
    "description": "Framework to easily validate objects and attributes using a simple and expressive DSL.",
    "keywords": ["validation", "expectation", "assertion", "DSL"],
    "version": "1.0.2",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/haijin-development/php-validations",
    "authors": [
        {
            "name": "Haijin Development",
            "email": "haijin.development@gmail.com",
            "homepage": "https://github.com/haijin-development",
            "role": "developer"
        }
    ],
    "config": {
        "platform": {
            "php": "7.1"
        }
    },
    "require": {
        "haijin/tools": "^1.0"
    },
    "require-dev": {
        "haijin/specs": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Haijin\\Validations\\": ["src/", "src/validation-messages/"]
        }
    },
    "scripts": {
        "specs": "php ./vendor/bin/specs"
    }
}
